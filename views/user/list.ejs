<!DOCTYPE html>
<html>
  <%- include('../head') -%>
  <body ng-app="">
    <div class="container-fluid top-navbar box-shadow" style="background-image: url('https://image.shutterstock.com/image-photo/healthy-breakfast-ingredients-food-frame-260nw-730734214.jpg'); background-size: 1550px 350px;">
        <a href="/" class="float-left">
          <h2 style="font-family: Verdana, Geneva, Tahoma, sans-serif; color:rgb(223, 213, 213);">
            <img src="/images/logo/logo.png" class="logo" style= "height: 100px ; width: 130px;">
            <b>CookedIt</b>
          </h2>
        </a>
  
      </div>
    
    <br>
    <div class="container">
    <input type="text" class="form-control" onkeyup="updateList(this.value);" placeholder="Search here..." />
    <br>
    <ul class="list-group">
      <li class="list-group-item list-group-item-primary">Total Users</li>
           <li class="list-group-item">
            Total <b><%= list.length %></b> user(s) have signed up.
         </li>

   </ul>
    <ul class="list-group">
      <li class="list-group-item list-group-item-primary">Results</li>
      <div id="user-list">
      <% for(var i=0;i<list.length;i++) { %>
         <li class="list-group-item">
            <img src="<%= list[i].profile_pic %>" class="logo">
            <b><a href="/u/<%= list[i].username %>" id="list-username"><%= list[i].username %></a></b>
         </li>
      <% } %>
    </div>
   </ul>

    <div id="notify_message" class=" notify_message-success">
    	<center>Search for people on CookedIt...</center>
    </div>
    <%- include('../tabs') -%>
    <%- include('../footer') -%>
  </body>
   <script type="text/javascript" src="/javascripts/dom.js"></script>
   <script type="text/javascript" src="/javascripts/search.js"></script>

</html>
